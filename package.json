{
  "private": true,
  "name": "go-tiny",
  "version": "1.0.0",
  "description": "Yet another URL Shortener. Go tiny, go anywhere.",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -i ./styles/app.css -o ./public/css/app.css --minify",
    "dev:css": "tailwindcss -i ./styles/app.css -o ./public/css/app.css --watch",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luke-rucker/go-tiny.git"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.10"
  }
}
